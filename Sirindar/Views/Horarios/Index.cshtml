
@{
    ViewBag.Title = "Inicio";
}
@{var json = (HtmlString)ViewBag.json; }
<h2>Horarios</h2>
<div class="row" ng-app="listApp" ng-controller="listController">
    <div>
        <div class="alert alert-info alert-dismissible" role="alert" ng-hide="items.length != 0">
            <strong>{{ message }}</strong>
        </div>
    </div>
    <div class="col-md-12">
        <div class="table-responsive">
            <div>
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Horario</th>
                                <th>Inicia</th>
                                <th>Finaliza</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in tempItems">
                                <td scope="row"></td>
                                <td>{{ x.Nombre }}</td>
                                <td>{{ x.Inicia }}</td>
                                <td>{{ x.Finaliza }}</td>
                                <td><a href="#" ng-click="editItem('@Url.Action("Edit")', x.HorarioId)"><span class="glyphicon glyphicon-edit"></span></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        jsPageing('@json', "", 3, 3);
    </script>
}