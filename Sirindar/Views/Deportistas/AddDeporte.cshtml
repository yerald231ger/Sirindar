@model Sirindar.Models.CreateDeporteDeportistaViewModel

@using (Html.BeginForm())
{
    <div class="modal-header">
        <h4>Agreagar nuevo deporte</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.Hidden("DeportistaId", (int)ViewBag.DeportistaId)

            <div class="form-group">
                @Html.LabelFor(model => model.DeporteId, "GrupoAlimenticioId", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("DeporteId", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeporteId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IniciaEntrenamiento, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.IniciaEntrenamiento, new { @class = "form-control", type = "time" })
                    @Html.ValidationMessageFor(model => model.IniciaEntrenamiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FinalizaEntrenamiento, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.FinalizaEntrenamiento, new { @class = "form-control", type="time" })
                    @Html.ValidationMessageFor(model => model.FinalizaEntrenamiento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="row">
            <div class="col-md-offset-7 col-md-2 col-sm-offset-7 col-sm-2">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
            <div class="col-md-2 col-sm-2">
                <div class="form-actions no-color">
                    <input type="submit" value="Crear" class="btn btn-info" />
                </div>
            </div>
            <div class="col-md-1 col-sm-1"></div>
        </div>
    </div>
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>