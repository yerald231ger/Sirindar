@model Sirindar.Models.AsignacionHorariosViewModel
<div class="table-responsive">
    <table class="table table-condensed">
        <tr>
            <th></th>
            <th>Lunes</th>
            <th>Martes</th>
            <th>Miercoles</th>
            <th>Jueves</th>
            <th>Viernes</th>
            <th>Sabado</th>
            <th>Domingo</th>
        </tr>
