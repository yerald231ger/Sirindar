            <td></td>
            <td>@Html.CheckBoxFor(model => model.Monday)</td>
            <td>@Html.CheckBoxFor(model => model.Tuesday)</td>
            <td>@Html.CheckBoxFor(model => model.Wednesday)</td>
            <td>@Html.CheckBoxFor(model => model.Thursday)</td>
            <td>@Html.CheckBoxFor(model => model.Friday)</td>
            <td>@Html.CheckBoxFor(model => model.Saturday)</td>
