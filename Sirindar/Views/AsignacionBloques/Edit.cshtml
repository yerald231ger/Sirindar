@model Sirindar.Models.UpdateAsignacionBloquesViewModel

@{
    ViewBag.Title = "Modifica";
}

<h2>Modificación</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.DeportistaNombre</h4>
        <hr />
        @Html.ValidationSummary()

        @Html.HiddenFor(model => model.DeportistaId)
        @Html.HiddenFor(model => model.AsignacionBloqueId)

        <div class="form-group">
            @Html.Label("Deporte", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("DeporteId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeporteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Bloque", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("BloqueId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloqueId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}




