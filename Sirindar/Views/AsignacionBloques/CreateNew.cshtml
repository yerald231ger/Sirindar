@model Sirindar.Models.CreateAsignacionBloquesViewModel

@{
    ViewBag.Title = "CreateNew";
}

<h2>CreateNew</h2>

@using (Html.BeginForm()) 
{
   @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Asiganción para @ViewBag.DeportistaNombre</h4>
        <hr />
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.Label("DeportistaId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DeportistaId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeportistaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Deporte", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DeporteId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeporteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Bloque", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BloqueId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloqueId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
