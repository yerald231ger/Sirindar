        var tbl_deportistas = $('#tbl-deportistas').dataTable({
            processing: true,
            serverSide: true,
            "ajax": "@Url.Action("GetDeportistas", "AsignacionBloques")",
            "columns": [
                {
                    "data": "Matricula",
                    "orderable": false,
                    "searchable": false,
                    "render": function (data) {
                        return '<a href="#" onclick="displayDeportes(' + data + ')">' + data + '</a>';
                    }
                },
                { "data": "Nombre" },
                { "data": "Apellidos" }
            ]
        });

        var tbl_bloques = $('#tbl-bloques').dataTable({
            "ajax": "@Url.Action("GetBloques","AsignacionBloques")",
            "columns": [
                { "data": "Nombre" },
                { "data": "KilocaloriasTotales" },
            ]
        });

        function displayDeportes(matricula) {
            $.getJSON("@Url.Action("GetDeportes", "AsignacionBloques")?matricula=" + matricula).success(function (json) {
                $("#list-deportes-id li").remove();
                $.each(json, function (i, v) {
                    $("#list-deportes-id").append("<li class='list-group-item'><a href='#'>" + v.Nombre + "</a></li>");
                });
            });
        }

        $('#example tbody').click(function (data) {
            //alert(data.toElement.parentNode.id);
        });
    </script>
