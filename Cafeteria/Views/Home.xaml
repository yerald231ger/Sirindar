<Page x:Class="Cafeteria.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cafeteria.Views"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="900"
      Title="Home">

    <Grid>
        <Rectangle Fill="#FF102F66" Stroke="#FF00498E" Margin="445,0,0,0" RadiusX="14.3" RadiusY="14.3" StrokeThickness="1.4"/>
        <Grid HorizontalAlignment="Left" Height="70" Margin="445,270,0,0" VerticalAlignment="Top" Width="455">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="57*"/>
                <ColumnDefinition Width="17*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="Bienvenido" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="265" Height="50" FontFamily="Segoe UI Semibold" FontSize="29.333" HorizontalContentAlignment="Center" Foreground="White"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="195" Margin="445,75,0,0" VerticalAlignment="Top" Width="455">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="84*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="375">
                <Label x:Name="lblA" Content="Nombre:" Margin="0,0,0,0" Height="35" FontSize="18.667" Foreground="White" FontFamily="Segoe UI Light"/>
                <Label x:Name="lblNombre" Content="Juan Perez" Width="293" Foreground="White" FontSize="18.667" FontFamily="Segoe UI Light"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="375">
                <Label x:Name="lblB" Content="Dependencia:" Height="35" Margin="0,0,0,0" FontSize="18.667" FontFamily="Segoe UI Light" Foreground="White"/>
                <Label x:Name="lblDependencia" Content="Facultad de Medicina" Width="253" FontSize="18.667" FontFamily="Segoe UI Light" Foreground="White"/>
            </StackPanel>
            <Rectangle Name="rectSinHorario" Fill="#FF102F66" Visibility="Collapsed" HorizontalAlignment="Left" Height="175" Margin="13,10,0,0" RadiusY="14.3" RadiusX="14.3" Stroke="#FF00498E" StrokeThickness="1.4" VerticalAlignment="Top" Width="400" Grid.RowSpan="4" Grid.Column="1"/>
            <TextBlock x:Name="txbSinHorario" HorizontalAlignment="Left" Margin="41,38,0,0" Visibility="Collapsed" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="346"  Text="Fuera de hora de servicio" FontSize="25" Foreground="Red" FontFamily="Segoe UI Light" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" TextAlignment="Center" />

        </Grid>
        <Grid HorizontalAlignment="Left" Height="75" Margin="445,0,0,0" Width="455" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Center" Height="55" Margin="10,10,0,0" VerticalAlignment="Center" Width="295" Orientation="Horizontal">
                <Label Name="lblMatricula" Content="Matricula" Width="120" Foreground="White" FontSize="22" FontFamily="Segoe UI Semilight" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Name="txbScanner" MaxLength="10" TextWrapping="Wrap" Width="170" Margin="0,10,0,0" IsEnabled="False" Height="35" VerticalAlignment="Top" FontSize="18.667" FontFamily="Segoe UI Semibold" TextAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="445">
            <Grid.RowDefinitions>
                <RowDefinition Height="79*"/>
                <RowDefinition Height="167*"/>
                <RowDefinition Height="94*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblheader" Content="Pase su credencial por el lector y recoja su ticket." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="55" Width="425" FontFamily="Segoe UI Semilight" Foreground="#FF102F66" FontSize="18.667" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Label x:Name="lblFooter" Content="Cualquier duda o comentario favor de contactar al &#xA;encargadi de la cafeteria." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="70" Width="425" FontFamily="Segoe UI Semilight" Foreground="#FF102F66" FontSize="14.667" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="2" VerticalContentAlignment="Bottom"/>
            <StackPanel x:Name="stkpHorarios" HorizontalAlignment="Left" Height="147" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="425">
                <ListBox x:Name="lbxHorarios" Height="147" Width="425" IsHitTestVisible="False" ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True" Foreground="#FF102F66" Background="{x:Null}" BorderBrush="{x:Null}" SelectedIndex="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Nombre}" Height="37" Width="114" Foreground="#FF102F66" FontSize="18.667" FontFamily="Segoe WP Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="0,6,0,0" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Inicia}" Height="37" Width="134" Foreground="#FF102F66" FontSize="18.667" FontFamily="Segoe WP Black" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="0,6,0,0" TextAlignment="Center"/>
                                <TextBlock x:Name="lblComidaHorario_Copy" Height="37" Text="a" Width="21" Foreground="#FF102F66" FontSize="18.667" FontFamily="Segoe WP Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="0,6,0,0" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Finaliza}" Height="37" Width="136" Foreground="#FF102F66" FontSize="18.667" FontFamily="Segoe WP Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="0,6,0,0" TextAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
